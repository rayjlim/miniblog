{% include '_header.twig' %}

{% include '_banner.twig' %}

<div class="container">
	<form action="../uploadImage/" method="post" enctype="multipart/form-data" style="margin-top:10px">
	    
    <div class="form-group">
      <label for="fileToUpload">Select image to upload:</label>
      <input type="file" name="fileToUpload" id="fileToUpload">
    </div>
  	<div class="form-group">
      <label for="filePath">Path</label>
      <input type="text" class="form-control" id="filePath" name="filePath" value="" />
    </div>
    <div class="form-group">
      <label for="newName">New Name</label>
      <input type="text" class="form-control" id="newName" name="newName" value="" />
    </div>
	  <input type="submit" class="btn btn-primary" value="Upload Image" name="submit">
	</form>
</div>

  <nav class="navbar navbar-expand-sm  fixed-bottom navbar-light bg-light">
      <a href="{{baseurl}}main#/text" class="btn navbar-btn nav-link">Blog Page</a>
  </nav>
</body>
</html>

